#include <stdio.h>
#include <string.h>
#include <stdlib.h>

#define CAPACIDADE_MAXIMA 10

// --- 1. DEFINIÇÃO DA STRUCT ---
// A struct Item agrupa as informações de cada objeto coletado.
struct Item {
    char nome[30];
    char tipo[20]; // Ex: Arma, Municao, Cura
    int quantidade;
};

// --- PROTÓTIPOS DAS FUNÇÕES ---
// Passamos o ponteiro para o contador (*qtd) para poder alterá-lo dentro das funções
void inserirItem(struct Item mochila[], int *qtd);
void removerItem(struct Item mochila[], int *qtd);
void listarItens(struct Item mochila[], int qtd);
void buscarItem(struct Item mochila[], int qtd);

int main() {
    // --- 2. VETOR DE STRUCTS ---
    // Cria a mochila com capacidade para 10 itens
    struct Item mochila[CAPACIDADE_MAXIMA];
    
    // Variável que controla quantos itens estão realmente ocupados
    int quantidadeAtual = 0;
    int opcao = 0;

    // Loop do menu principal
    do {
        printf("\n=== MOCHILA DE SOBREVIVENCIA (%d/%d) ===\n", quantidadeAtual, CAPACIDADE_MAXIMA);
        printf("1. Adicionar Item (Loot)\n");
        printf("2. Remover Item (Descartar)\n");
        printf("3. Listar Inventario\n");
        printf("4. Buscar Item\n");
        printf("0. Sair\n");
        printf("Escolha uma opcao: ");
        scanf("%d", &opcao);

        switch(opcao) {
            case 1:
                inserirItem(mochila, &quantidadeAtual);
                break;
            case 2:
                removerItem(mochila, &quantidadeAtual);
                break;
            case 3:
                listarItens(mochila, quantidadeAtual);
                break;
            case 4:
                buscarItem(mochila, quantidadeAtual);
                break;
            case 0:
                printf("Fechando mochila...\n");
                break;
            default:
                printf("Opcao invalida!\n");
        }
    } while(opcao != 0);

    return 0;
}

// --- IMPLEMENTAÇÃO DAS FUNÇÕES ---

// Função para cadastrar itens
void inserirItem(struct Item mochila[], int *qtd) {
    // Verifica se a mochila está cheia
    if (*qtd >= CAPACIDADE_MAXIMA) {
        printf("\n[ERRO] Mochila cheia! Descarte algo antes.\n");
        return;
    }

    printf("\n--- NOVO ITEM ---\n");
    
    printf("Nome do item: ");
    // ' %29[^\n]' lê string com espaços e descarta o enter anterior
    scanf(" %29[^\n]", mochila[*qtd].nome); 
    
    printf("Tipo (Arma, Municao, Cura): ");
    scanf(" %19[^\n]", mochila[*qtd].tipo);
    
    printf("Quantidade: ");
    scanf("%d", &mochila[*qtd].quantidade);

    // Incrementa o contador de itens na mochila (acessando via ponteiro)
    (*qtd)++; 
    printf("Item adicionado com sucesso!\n");
    
    // Lista itens automaticamente após a ação (requisito funcional)
    listarItens(mochila, *qtd);
}

// Função para remover itens (exclusão física do vetor)
void removerItem(struct Item mochila[], int *qtd) {
    if (*qtd == 0) {
        printf("\n[ERRO] A mochila esta vazia.\n");
        return;
    }

    char nomeBusca[30];
    int encontrado = 0; // Flag lógica (0 = falso, 1 = verdadeiro)

    printf("\n--- DESCARTAR ITEM ---\n");
    printf("Digite o nome do item para remover: ");
    scanf(" %29[^\n]", nomeBusca);

    // Percorre o vetor procurando o item
    for (int i = 0; i < *qtd; i++) {
        if (strcmp(mochila[i].nome, nomeBusca) == 0) {
            encontrado = 1;
            
            // Lógica de remoção: Desloca todos os itens da frente para trás
            // para cobrir o buraco deixado pelo item removido.
            for (int j = i; j < *qtd - 1; j++) {
                mochila[j] = mochila[j + 1];
            }
            
            // Decrementa o total de itens
            (*qtd)--;
            printf("Item '%s' removido da mochila.\n", nomeBusca);
            break; // Sai do loop pois já removeu
        }
    }

    if (!encontrado) {
        printf("Item nao encontrado na mochila.\n");
    } else {
        listarItens(mochila, *qtd);
    }
}

// Função para listar todos os itens registrados
void listarItens(struct Item mochila[], int qtd) {
    printf("\n--- CONTEUDO DA MOCHILA ---\n");
    if (qtd == 0) {
        printf("(Vazia)\n");
    } else {
        printf("%-20s | %-15s | %s\n", "NOME", "TIPO", "QTD");
        printf("--------------------------------------------------\n");
        for (int i = 0; i < qtd; i++) {
            printf("%-20s | %-15s | %d\n", 
                   mochila[i].nome, 
                   mochila[i].tipo, 
                   mochila[i].quantidade);
        }
    }
    printf("--------------------------------------------------\n");
}

// Função de busca sequencial
void buscarItem(struct Item mochila[], int qtd) {
    char nomeBusca[30];
    int encontrado = 0;

    printf("\n--- BUSCAR ITEM ---\n");
    printf("Digite o nome para buscar: ");
    scanf(" %29[^\n]", nomeBusca);

    // Percorre o vetor sequencialmente comparando os nomes
    for (int i = 0; i < qtd; i++) {
        if (strcmp(mochila[i].nome, nomeBusca) == 0) {
            printf("\n[ENCONTRADO] Posicao na mochila: %d\n", i + 1);
            printf("Nome: %s\n", mochila[i].nome);
            printf("Tipo: %s\n", mochila[i].tipo);
            printf("Quantidade: %d\n", mochila[i].quantidade);
            encontrado = 1;
            break; // Para a busca ao encontrar
        }
    }

    if (!encontrado) {
        printf("[INFO] Item nao localizado.\n");
    }
}
